<nav class="navbar navbar-expand-lg navbar-light p-3 bg-light d-flex justify-content-between" >
    <%= link_to "Wikinimous", articles_path %>
    <%= link_to "New article", new_article_path %>
</nav>

<div class="index-container d-flex justify-content-center">
<ul id="list">
  <% @articles.each do |article| %>
  <li id="list">
    <div>
    <h2 id="title"><%=link_to article[:title], article_path(article[:id])%></h2>
    <p id="content"><%=article[:content].slice(1..80)%></p>
    <% end %>
    </div>
  </li>
</ul>

</div>
